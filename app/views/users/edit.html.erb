

  <div class="row-fluid">


<div class="profileh2">
<h2> Profile Page </h2>
</div>

<div class="show-page1">
<%= image_tag @user.image, class: "img-circle", width: 200, height: 200 %>

<p>
 <b>Github ID:</b>   <%= @user.nickname %>
</p>

 <%= form_for @user do |f| %>
  <p>
    <%= f.label :fullname, "Full Name" %><br />
    <%= f.text_field :fullname %>
  </p>
  
   <p>
    <%= f.label :position, "Position" %><br />
    <%= f.text_area :position %>
  </p>
 
  <p>
    <%= f.label :company, "Company" %><br />
    <%= f.text_area :company %>
  </p>
 
 <p>
    <%= f.label :interest, "Interests" %><br />
    <%= f.text_area :interest %>
  </p>

  <p>
    <div class="actions" >
    <%= f.submit "Update", class: "btn btn-primary"%>
  </div>
  </p>
<% end %>
</div>


  </div>



              